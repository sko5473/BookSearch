<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kwang.ho.mapper.CommentMapper">

    <!-- 게시판 댓글 저장 -->
    <insert id="commentInsert" parameterType="kwang.ho.board.CommentDto">
        INSERT INTO T_BOARD_COMMENT (
        cid
        , bid
        , content
        , writer
        , create_Date)
        VALUES
        (COMMENT_SEQ.NEXTVAL,#{bid},#{content},#{writer},SYSDATE)
    </insert>

    <!-- 게시판 댓글 수정 -->
    <update id="commentUpdate" parameterType="kwang.ho.board.CommentDto">
        UPDATE T_BOARD_COMMENT
            SET
            CONTENT = #{content}
        WHERE cid = #{cid}
    </update>

    <!-- 게시판 댓글 삭제 -->
    <delete id="commentDelete" parameterType="int">
        DELETE FROM T_BOARD_COMMENT
        WHERE cid = #{cid}
    </delete>

    <!-- 게시판 댓글 갯수 -->
    <select id="commentCount" resultType="int">
        SELECT
            COUNT(*)
        FROM T_BOARD_COMMENT;
    </select>

    <!-- 게시판 댓글 목록 조회 -->
    <select id="commentList" resultType="kwang.ho.board.CommentDto">
        SELECT
          *
        FROM T_BOARD_COMMENT
        ORDER BY CREATE_DATE DESC
    </select>


</mapper>